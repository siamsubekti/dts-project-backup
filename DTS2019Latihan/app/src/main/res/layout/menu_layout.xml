<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/action_pratikum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pratikum 1"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pratikum 2"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pratikum 3"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internal Storage"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eksternal Storage"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sqlite Database"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/action_pratikum7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volley API"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


    </ScrollView>





</LinearLayout>